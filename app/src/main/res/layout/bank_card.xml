<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:layout_below="@+id/bankbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="10sp"
        android:orientation="vertical"
        tools:onClick="OnCallBalance"
        android:background="@color/colorWhite">

        <ImageView
            app:srcCompat="@drawable/statebankofindia"
            android:id="@+id/imageViewHeader"
            android:layout_height="100px"
            android:layout_width="100px"
            tools:onClick="OnCallBalance"
            android:background="@color/colorWhite"
            android:layout_gravity="center_horizontal"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110sp"
            android:layout_below="@+id/logofav"
            android:orientation="horizontal"
            android:background="@color/colorWhite">

            <TextView
                android:text="State Bank of India"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewHeader"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                tools:onClick="OnCallBalance"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:textStyle="normal|bold"
                android:layout_centerHorizontal="true"/>
            <ToggleButton
                android:id="@+id/fav"
                android:focusable="false"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_margin="10sp"
                android:background="@drawable/toggle"
                android:textOff=""
                android:textOn=""
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/bankbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5pt"
        android:padding="5pt"
        android:orientation="horizontal"
        tools:onClick="OnCallBalance"
        android:background="@drawable/customerborder">

        <ImageView

            android:id="@+id/imageView"
            android:layout_height="match_parent"
            android:layout_width="100px"
            tools:onClick="OnCallBalance"/>

        <TextView
            android:text="Check Balance (1800183423)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:gravity="center_horizontal|center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            tools:onClick="OnCallBalance"
            tools:textColor="@color/colorPrimaryDark"
            android:paddingLeft="10px"
            android:layout_gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/bankbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5pt"
        android:padding="5pt"
        android:orientation="horizontal"
        tools:onClick="OnCallBalance"
        android:background="@drawable/customerborder">

        <ImageView
            android:id="@+id/imageViewCustomerCare"
            android:layout_height="match_parent"
            android:layout_width="100px"
            tools:onClick="OnCallBalance"/>

        <TextView
            android:text="Customer Care (1800100000)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCustomerCare"
            android:gravity="center_horizontal|center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            tools:onClick="OnCallBalance"
            tools:textColor="@color/colorPrimaryDark"
            android:paddingLeft="10px"
            android:layout_gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_BankCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_home_footer">
    </com.google.android.gms.ads.AdView>
    </LinearLayout>