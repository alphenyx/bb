<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/bankbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:orientation="horizontal"
        tools:onClick="OnCallBalance"
        android:background="@color/colorWhite">

        <ImageView
            app:srcCompat="@drawable/sbi_logo"
            android:id="@+id/imageViewHeader"
            android:layout_height="match_parent"
            android:layout_width="100px"
            tools:onClick="OnCallBalance"
            android:background="@color/colorWhite" />

        <TextView
            android:text="State Bank of India"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHeader"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            tools:onClick="OnCallBalance"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:textStyle="normal|bold"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:text="Dial for balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:textAlignment="center"
        android:typeface="sans"
        android:layout_weight="0.05"
        android:textStyle="normal|bold"
        android:paddingTop="3pt"
        android:background="@color/colorAccent"
        tools:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/bankbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2pt"
        android:padding="2pt"
        android:orientation="horizontal"
        tools:onClick="OnCallBalance"
        android:background="?android:attr/colorAccent">

        <ImageView
            app:srcCompat="@drawable/phone"
            android:id="@+id/imageView"
            android:layout_height="match_parent"
            android:layout_width="100px"
            tools:onClick="OnCallBalance"/>

        <TextView
            android:text="1800183423"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            tools:onClick="OnCallBalance"
            tools:textColor="@color/colorWhite"
            android:paddingLeft="10px"
            android:paddingTop="14px"
            android:phoneNumber="true" />
    </LinearLayout>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        tools:onClick="OnCallBalance"
        android:height="0dp"
        android:visibility="invisible" />
</LinearLayout>